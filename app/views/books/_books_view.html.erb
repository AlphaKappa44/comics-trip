<!-- Boucle pour presenter tous les Items -->
<div class="container">
    <div class="row justify-content-center">
        <% @books.each do |book| %>
            <div class="card col col-auto" style="width: 33rem; margin: 1rem 1rem 1rem 1rem;">
                <% unless book.picture.nil? %>
                <img class="card-img-top display:block" style="margin-top:1rem; margin-bottom:20rem" src="<%= book.picture%>" alt="Card image cap">
                <% else %>
                    <img class="card-img-top" style="height: auto; width:100;margin-top:1rem; padding-bottom:33rem" src="" alt="Card image cap">
                    <% end %>
                    <div class="card-body" style="position: absolute;bottom: 0;padding-bottom:5rem">
                        <p class="card-title" style="margin-top:10rem;"><%=book.title%></p>
                    </div>
                    <div class="d-flex justify-content-sm-center">
                        <div class="row" style="position: absolute;bottom: 0;">
                            <div class="col"><%= button_to "product", book_path(book.id), method: :get , class: "btn btn-info align-self-center mx-auto" %></div>
                            <% if !current_user.nil? %>
                                <% if book.user_id == current_user.id %>
                                    <div class="col">
                                        <%= button_to "remove", book_path(id: book.id), method: :delete , class: "btn btn-danger align-self-center mx-auto"%>
                                    </div>
                                <% end %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </p>
        <% end %>
    </div>
</div>
