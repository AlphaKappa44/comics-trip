<!-- Boucle pour presenter tous les Items -->
<div class="container col-12 mx-auto">
    <div class="row justify-content-center mx-auto">
        <% @books.each do |book| %>
            <div class="card views-no-padding">
                <% unless book.picture.nil? %>
                <img class="card-img-top img-views" src="<%=book.picture[0...-1]+"2"%>" alt="Card image cap">
                <% else %>
                    <img class="card-img-top img-views" src="" alt="Card image cap">
                    <% end %>
                    <div class="card-body">
                        <p class="card-title"><%=book.title%></p>
                    </div>
                    <div class="d-flex justify-content-sm-center">
                        <div class="row viewsbutton">
                            <div class="col"><%= button_to "Consulter", book_path(book.id), method: :get , class: "btn btn-info align-self-center mx-auto" %></div>
                            <% if !current_user.nil? %>
                                <div class="col">
                                    <%= button_to "Effacer", book_path(id: book.id), method: :delete , class: "btn btn-danger align-self-center mx-auto"%>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </p>
        <% end %>
    </div>
</div>
