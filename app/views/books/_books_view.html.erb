<!-- Boucle pour presenter tous les Items -->
<div class="container">
    <div class="row justify-content-center">
        <% @books.each do |book| %>
            <div class="card col col-auto justify-content-center align-items-center" style="width: 24rem; margin: 1rem auto">
                <% unless book.picture.nil? %>
                <img class="card-img-top justify-content-center align-items-center" style="height: 55%; width:auto%; max-width:95%; max-height:70%;margin-top:1rem; margin-bottom:18rem" src="<%=book.picture.chomp("0")+"2"%>" alt="Card image cap">
                <% else %>
                    <img class="card-img-top" style="margin-top:1rem; padding-bottom:33rem" src="" alt="Card image cap">
                    <% end %>
                    <div class="card-body" style="position: absolute;bottom: 0;padding-bottom:5rem">
                        <p class="card-title" style="margin-top:10rem;"><%=book.title%></p>
                    </div>
                    <div class="d-flex justify-content-sm-center">
                        <div class="row" style="position: absolute;bottom: 0;">
                            <div class="col"><%= button_to "Consulter", book_path(book.id), method: :get , class: "btn btn-info align-self-center mx-auto" %></div>
                            <% if !current_user.nil? %>
                                <div class="col">
                                    <%= button_to "Effacer", book_path(id: book.id), method: :delete , class: "btn btn-danger align-self-center mx-auto"%>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </p>
        <% end %>
    </div>
</div>
