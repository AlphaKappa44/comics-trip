<% if @book.errors.any? %>
 <div class="alert alert-danger" role="alert">
   <p>Book creation process failed due to:</p>
     <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
 </div>
<% end %>


<h1>New Book</h1>

<%= render 'form', book: @book %>

<%= link_to 'Back', books_path %>

