<%user=User.find_by(id: @book_card.user_id) %>
<%book=Book.find_by(id: @book_card.book_id)%>
<div class="container-fluid; mt-5">
    <div class="content-wrapper">
        <div class="item-container">
            <div class="container">
                <div class="col-md-12">
                    <div class="product col-md-3 service-image-left">
                        <img id="item-display" class="img-fluid" src=" <%= @book_card.book_picture %> " alt=""></div>
                    </div>
                    <div class="col-md-7">
                        <div class="product-title"><%= book.title %></div>
                        <div class="product-desc"><%= @book_card.review %></div>
                        <div class="product-rating">
                            <i class="fa fa-star gold"></i>
                            <i class="fa fa-star gold"></i>
                            <i class="fa fa-star gold"></i>
                            <i class="fa fa-star gold"></i>
                            <i class="fa fa-star gold"></i>
                        </div>
                        <hr>
                            <div class="product-price">$
                                <%= @book_card.price %></div>
                            <div class="product-stock">En stock</div>
                            <hr>

                                <% if !current_user.nil? && @book_card.user_id == current_user.id %>
                                    <div class="container">
                                        <%= button_to "remove", book_card_path(id: @book_card.id), method: :delete, class: "btn btn-danger"%>
                                        <%= button_to "edit", edit_book_card_path(id: @book_card.id), method: :get, class: "btn btn-info"%>
                                    </div>
                                    <%end%>
                                </div>
                            </div>
                        </div>
                        <div class="container-fluid">
                            <div class="col-md-12 product-info">
                                <ul class="nav nav-tabs">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="tab" href="#service-one">DESCRIPTION</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#service-two">ACHAT, VENTE OU CRITIQUE</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link " data-toggle="tab" href="#service-three">ETAT DU LIVRE</a>
                                    </li>
                                </ul>
                                <div id="myTabContent" class="tab-content">
                                    <div class="tab-pane active" id="service-one">
                                        <section class="container">
                                            <p><%= @book_card.review %></p>
                                            <p><%= user.email %></p>
                                            NOMBRE DE VUES:
                                            <%= @book_card.hits %>
                                        </section>
                                    </div>
                                    <div class="tab-pane fade" id="service-two">
                                        <section class="container">
                                            <p><%= @book_card.to_sell %></p>
                                            <p><%= user.email %></p>
                                            NOMBRE DE VUES:
                                            <%= @book_card.hits %>
                                        </section>
                                    </div>
                                    <div class="tab-pane fade" id="service-three">
                                        <section class="container">
                                            <p><%= @book_card.book_condition %></p>
                                            <p><%= user.email %></p>
                                            NOMBRE DE VUES:
                                            <%= @book_card.hits %>
                                        </section>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>    
        </div>    
    </div>
</div>
